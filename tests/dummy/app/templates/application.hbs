<h1>Field</h1>

<h2>Basic</h2>

{{#ui-field as |f|}}
  {{#f.label class="ui-fontSize--small"}}
    Label goes here:
  {{/f.label}}
  {{f.input value=address placeholder="Type something..."}}
{{/ui-field}}


<h1>Buttons</h1>

<h2>Sizes</h2>

{{#ui-button kind="default" size="small"}}
  hello world
{{/ui-button}}

{{#ui-button kind="primary" size="small"}}
  hello world
{{/ui-button}}

{{#ui-button}}
  hello world
{{/ui-button}}

{{#ui-button kind="primary"}}
  hello world
{{/ui-button}}

{{#ui-button kind="default" size="large"}}
  hello world
{{/ui-button}}

{{#ui-button kind="primary" size="large"}}
  hello world
{{/ui-button}}

<h2>Disabled</h2>

{{#ui-button disabled=true}}
  hello world
{{/ui-button}}

{{#ui-button kind="primary" disabled=true}}
  hello world
{{/ui-button}}

